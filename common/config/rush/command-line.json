{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/command-line.schema.json",
  "commands": [
    {
      "name": "build:watch",
      "commandKind": "bulk",
      "summary": "Build projects and watch for changes",
      "incremental": true,
      "enableParallelism": true,
      "watchForChanges": true
    },
    {
      "name": "lint",
      "commandKind": "bulk",
      "summary": "Check linting errors",
      "enableParallelism": true,
      "ignoreDependencyOrder": true,
      "ignoreMissingScript": true
    },
    {
      "name": "test",
      "commandKind": "bulk",
      "summary": "Test projects",
      "enableParallelism": true,
      "ignoreDependencyOrder": true,
      "ignoreMissingScript": true
    },
    {
      "name": "format",
      "commandKind": "global",
      "summary": "Format workspace",
      "autoinstallerName": "pre-commit",
      "shellCommand": "prettier --write ."
    },
    {
      "name": "format:check",
      "commandKind": "global",
      "summary": "Check workspace formatting",
      "autoinstallerName": "pre-commit",
      "shellCommand": "prettier --check ."
    },
    {
      "name": "sort-package-json",
      "commandKind": "global",
      "summary": "Sort package.json files",
      "autoinstallerName": "pre-commit",
      "shellCommand": "sort-package-json $(find . -name package.json -not -path '*/node_modules/*' -not -path '*/temp/*')"
    },
    {
      "name": "sort-package-json:check",
      "commandKind": "global",
      "summary": "Check if package.json files are sorted",
      "autoinstallerName": "pre-commit",
      "shellCommand": "sort-package-json --check $(find . -name package.json -not -path '*/node_modules/*' -not -path '*/temp/*')"
    },
    {
      "name": "lint-staged",
      "commandKind": "global",
      "summary": "Run workspace linting and formatting on staged git changes",
      "autoinstallerName": "pre-commit",
      "shellCommand": "lint-staged"
    }
  ]
}
